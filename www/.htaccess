# public/.htaccess
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Laisser passer les fichiers/dossiers existants
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d

  # Sinon, tout passe par index.php
  RewriteRule ^(.+)$ index.php?url=$1 [QSA,L]
</IfModule>

